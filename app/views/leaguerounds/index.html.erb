<%
   currentPlayed = 0

   for roundNumber in 0..5
        table = @rounds[roundNumber]
        if table != nil

%>


<div class="row">
    <div class="span1">
    </div>
    <div class="span12">
        <table class="table table-condensed table-hover">
            <thead>
            <tr>
                <th></th>
                <th align="left">Runde <%= roundNumber+1 %></th>
                <th>Arne </th>
                <th>Børge </th>
                <th>Rune </th>
                <th>W</th>
                <th>D</th>
                <th>L</th>
                <th>F</th>
                <th>A</th>
                <th>GD</th>
                <th>Pts</th>
            </tr>
            </thead>
            <tbody>

<%
            if table != nil
                for i in 0..5
                    team = table[i]
                    if team != nil
%>
                    <tr>
                        <td><%= team.position %></td>
                        <td><%= team.name %></td>
                        <td><%= team.userpoints["Arne"] %></td>
                        <td><%= team.userpoints["Børge"] %></td>
                        <td><%= team.userpoints["Rune"] %></td>

                        <td><%= team.win %></td>
                        <td><%= team.drawn %></td>
                        <td><%= team.lost %></td>
                        <td><%= team.for %></td>
                        <td><%= team.against %></td>
                        <td><%= team.goal_difference %></td>
                        <td><%= team.points %></td>
                    </tr>
                 <% end
                end %>
            <% end %>

        <tr>
            <td></td>
            <td align="left">SUM: </td>
            <td><%= @round_points[roundNumber]["Arne"] %></td>
            <td><%= @round_points[roundNumber]["Børge"] %></td>
            <td><%= @round_points[roundNumber]["Rune"] %></td>

            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>



</tbody>
</table>
</div>
</div>

<%
   end
end

@allrounds.each do |lag|

%>
<div>
    <%= lag.position %>| <%= lag.name %> | <%= lag.played %>
</div>
<% end %>