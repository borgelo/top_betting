<%

   roundNumber = 38
   until roundNumber == 0 do
     roundNumber = roundNumber - 1
        table = @rounds[roundNumber]
        if table != nil

%>


<div class="row">
    <div class="span1">
    </div>
    <div class="span12">
        <table class="table table-condensed table-hover">
            <thead>
            <tr>
                <th align="left">Runde <%= roundNumber+1 %></th>
                <th>Arne </th>
                <th>Børge </th>
                <th>Rune </th>
                <th>W</th>
                <th>D</th>
                <th>L</th>
                <th>F</th>
                <th>A</th>
                <th>GD</th>
                <th>Pts</th>
            </tr>
            </thead>
            <tbody>

<%
            for i in 0..6
                team = table[i]
                if team != nil

                    pointsArne = 0
                    pointsBorge = 0
                    pointsRune = 0

                    if team.userpoints["Arne"]
                        pointsArne = team.userpoints["Arne"]
                    end
                    if team.userpoints["Borge"]
                      pointsArne = team.userpoints["Borge"]
                    end
                    if team.userpoints["Rune"]
                      pointsArne = team.userpoints["Arne"]
                    end

%>
                <tr>
                    <td><%= team.name %></td>
                    <td><%= pointsArne %></td>
                    <td><%= pointsBorge %></td>
                    <td><%= pointsRune %></td>

                    <td><%= team.win %></td>
                    <td><%= team.drawn %></td>
                    <td><%= team.lost %></td>
                    <td><%= team.for %></td>
                    <td><%= team.against %></td>
                    <td><%= team.goal_difference %></td>
                    <td><%= team.points %></td>
                </tr>
             <% end
            end %>


        <tr>
            <td align="left">SUM: </td>
            <td><%= @round_points[roundNumber]["Arne"] %></td>
            <td><%= @round_points[roundNumber]["Børge"] %></td>
            <td><%= @round_points[roundNumber]["Rune"] %></td>

            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>


</tbody>
</table>
</div>
</div>

<%
   end
end
%>
